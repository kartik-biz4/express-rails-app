<% if current_user.avatar.present? %>
  <%= image_tag(current_user.avatar)%>
<% else %>
  <%= image_tag "/uploads/user/avatar/blue-shadow-man-avatar.png"%>
<% end %>

<h1><%= current_user.name %></h1>
<span><%= link_to "Go to My profile", current_user %></span>
<span><%= pluralize(current_user.microposts.count, "View") %></span>  