<h1>All users</h1>

<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <% if user.avatar.present? %>
        <%= link_to image_tag(user.avatar), user%>
      <% else %>
        <%= link_to (image_tag "/uploads/user/avatar/blue-shadow-man-avatar.png"), user%>
      <% end %>      
      <%= link_to user.name, user %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>