<div class = "container">
<h1 class = "signUptext">Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for (@user), :html => {:class => "form-horizontal left signInForm"} do |f| %>

      <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation %>

      <%= f.label :Photo %>
      <%= f.file_field :avatar %>      

      <%= f.submit "I am Ready to Express !", class: "btn btn-primary signInSubmitBtn" %>
    <% end %>
  </div>
</div>

</div>