<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email, class: 'loginLabel'%>
      <%= f.email_field :email, class: 'form-control loginText' %>

      <%= f.label :password, class: 'loginLabel' %>
      <%= f.password_field :password, class: 'form-control loginText' %>

      <%= f.submit "Log in", class: "btn btn-primary loginBtn" %>
    <% end %>

    <p class = 'newUserLogin'>New user? <%= link_to "Sign up now!", '/signIn' %></p>
  </div>
</div>
